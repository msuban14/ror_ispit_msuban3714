<div class="list-group">
  <% countries.each_with_index do |country,i| %>
    <% if i%2 == 0 %>
      <%= link_to country.name, country , class: "list-group-item list-group-item-action list-group-item-light" %>
    <% else %>
      <%= link_to country.name, country , class: "list-group-item list-group-item-action list-group-item-dark" %>
    <% end %>
  <% end %>
</div>
