
<%= simple_form_for(@body_of_water) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :water_type, collection: BodyOfWater.water_types.keys, prompt: "Select type"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
