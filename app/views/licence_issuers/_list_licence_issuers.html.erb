<div class="list-group">
  <% licence_issuers.each_with_index do |li,i| %>
    <% if i%2 == 0 %>
      <%= link_to li.name, li , class: "list-group-item list-group-item-action list-group-item-light" %>
    <% else %>
      <%= link_to li.name, li , class: "list-group-item list-group-item-action list-group-item-dark" %>
    <% end %>
  <% end %>
</div>
