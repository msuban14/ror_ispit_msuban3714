<div class="container" style="margin-top: 2em">
  <div class="jumbotron">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="display-4"> <%= @fishing_area.name %> </h1>
      </div>
      <% if current_user==@fishing_area.user or current_user.admin %>
        <div class="col">
            <div class="dropdown  float-right">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Edit/Delete
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Edit #{@fishing_area.name}", edit_fishing_area_path(@fishing_area), class:"dropdown-item" %>
                <%= link_to "Delete #{@fishing_area.name}", @fishing_area, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
        </div>
      <% end %>
    </div>


    <hr class="my-4">
    <div class="media">
      <img class="img-fluid" src="<%= url_for @fishing_area.optimized_image(@fishing_area.thumbnail, 800, 400) %>" alt="fishing_area" width="100%"  />

    </div>

    <div id="accordion">
      <div class="card">
        <div class="card-header" id="headingOne">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
              Basic Information
            </button>
          </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            <p> Basic info like description and body of water </p>
            <% if @fishing_area.country != nil %>
              <p>Country: <%=@fishing_area.country.name %> </p>
            <% end %>
            <% if @fishing_area.body_of_water != nil %>
              <p>Body of water:<%=@fishing_area.body_of_water.name %> <%=@fishing_area.body_of_water.water_type %></p>
            <% end %>
            <p class="lead">Description: <%= @fishing_area.description%></p>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header" id="headingTwo">
          <h5 class="mb-0">
            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Fishing licence information
            </button>
          </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
          <div class="card-body">
            Information about licence, owner of body of water, fishing region, and game wardens
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header" id="headingThree">
          <h5 class="mb-0">
            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
              Target fish
            </button>
          </h5>
        </div>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
          <div class="card-body">
            Generate target fish
          </div>
        </div>
      </div>
    </div>


    <p class="lead">
      info about creation and user owner
    </p>
  </div>
  <br>
  <div id="comment_pane">
    <%= will_paginate(@comments, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    <% @comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment %>
    <% end %>
    <%= will_paginate(@comments, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
  </div>
  <%= link_to 'Leave a comment', new_fishing_area_comment_path(@fishing_area), class:'btn btn-outline-primary float-right' %>

  <br>

  </div>
